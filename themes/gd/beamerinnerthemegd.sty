\mode<presentation>

\NewEnviron{titlePage}[1][]{
      {     
    \usebackgroundtemplate{
        \vbox to \paperheight{\vfil\hbox to \paperwidth{\hfil\includegraphics[width=\paperwidth]{gd-front}\hfil}\vfil}
    }  
  \begin{frame}{#1}
  \BODY
  \end{frame}
      }
}

\NewEnviron{gdblank}[1][]{
      {     
